<%- include('../partials/header.ejs') %>

<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1 class="text-center"><%= title %></h1>
            <a href="/eid/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add gift
            </a>
            <table class="table table-bordered table-striped table-hover mt-3"> 
                <thead>
                    <tr class="d-flex"> 
                        <th class="text-center col-2">Make</th>
                        <th class="text-center col-2">Model</th>
                        <th class="text-center col-2">Year</th>
                        <th class="text-center col-2">Colour</th>
                        <th class="text-center col-2">Price</th>
                        <th class="text-center col-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let count = 0; count < eidgiftlist.length; count++) { %>
                        <tr class="d-flex">
                            <td class="text-center col-2"><%= eidgiftlist[count].Make %></td>
                            <td class="text-center col-2"><%= eidgiftlist[count].Model %></td>
                            <td class="text-center col-2"><%= eidgiftlist[count].Year %></td>
                            <td class="text-center col-2"><%= eidgiftlist[count].Colour %></td>
                            <td class="text-center col-2"><%= eidgiftlist[count].Price %></td>
                            <td class="text-center col-2">
                                <a href="/eid/edit/<%= eidgiftlist[count]._id %>" class="btn btn-primary btn-sm">
                                    <i class="fas fa-pencil-alt"></i> Edit
                                </a>
                                <button onclick="confirmDelete('<%= eidgiftlist[count]._id %>');" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </button>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</main>

<script>
    function confirmDelete(id) {
        if (confirm('Are you sure you want to delete this gift?')) { //confirms whether or not the user should delete or cancel
            window.location.href = '/eid/delete/' + id;
        }
    }
</script>

